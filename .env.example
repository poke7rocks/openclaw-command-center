# OpenClaw Command Center - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# OpenClaw Gateway Configuration
# ============================================
OPENCLAW_API_URL=http://100.64.0.2:8888
TAILSCALE_IP=100.64.0.2

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_NAME=openclaw_cc
DB_USER=openclaw_user
DB_PASS=your_secure_password_here

# ============================================
# API Keys
# ============================================
TODOIST_API_KEY=your_todoist_api_key_here
BRAVE_API_KEY=your_brave_api_key_here

# ============================================
# Session Configuration
# ============================================
SESSION_NAME=openclaw_session
SESSION_LIFETIME=3600

# ============================================
# WebSocket Configuration
# ============================================
WS_URL=ws://100.64.0.2:8889/ws/events
WS_RECONNECT_INTERVAL=5000

# ============================================
# Application Settings
# ============================================
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_LOG_LEVEL=info

# ============================================
# Security Notes
# ============================================
# - Never commit the .env file to Git
# - Use strong, unique passwords
# - Change SESSION_NAME to something unique
# - Set APP_DEBUG=false in production
# - Enable HTTPS in production (update auth.php cookie settings)
